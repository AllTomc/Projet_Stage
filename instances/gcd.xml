<?xml version="1.0" encoding="UTF-8"?>
<XCSP xmlns="http://www.cs.uni-potsdam.de/wv/2006/xcspr1" version="3.0">
    <instance>
        <variables>
            <!-- Déclaration des variables -->
            <variable name="x" type="integer" domain="1..100"/>
            <variable name="y" type="integer" domain="1..100"/>
            <variable name="gcd" type="integer" domain="1..100"/>
        </variables>

        <constraints>
            <!-- Contrainte GCD : Le plus grand commun diviseur de x et y est égal à gcd -->
            <extension name="GCD">
                <tuple>
                    <value variable="x" value="12"/>
                    <value variable="y" value="18"/>
                    <value variable="gcd" value="6"/>
                </tuple>
                <tuple>
                    <value variable="x" value="100"/>
                    <value variable="y" value="25"/>
                    <value variable="gcd" value="25"/>
                </tuple>
            </extension>

        </constraints>

        <objective>
            <maximize variable="gcd"/>
        </objective>
    </instance>
</XCSP>
