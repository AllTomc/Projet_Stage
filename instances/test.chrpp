// src/test.chrpp

#include <iostream>
#include <chrpp.hh>

void hello()
{
    std::cout << "Hello!" << std::endl;
}

<CHR name="TEST">
    <chr_constraint> test()
    test() <=> hello();;
</CHR>

int main()
{
    auto space = TEST::create();
    TRACE( chr::Log::register_flags(chr::Log::ALL); )

    CHR_RUN(
        space->test();
    )
    chr::Statistics::print(std::cout);
    return 0;
}

